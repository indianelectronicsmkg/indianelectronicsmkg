<body>
    <div class="container">
        <header>
            <h1>Microsoft Edge - Year in Review</h1>
            <p>Here's a look back at your browsing year.</p>
        </header>
        
        <div class="stats">
            <div class="stat-card" id="time-card">
                <h3>Total Time Spent</h3>
                <p id="total-time">Calculating...</p>
                <div class="progress-bar">
                    <div class="progress-fill" id="time-progress"></div>
                </div>
            </div>
            <div class="stat-card" id="sites-card">
                <h3>Top Sites Visited</h3>
                <ul id="top-sites"></ul>
            </div>
            <div class="stat-card" id="productivity-card">
                <h3>Productivity Score</h3>
                <p id="productivity-score">Calculating...</p>
                <div class="progress-bar">
                    <div class="progress-fill" id="productivity-progress"></div>
                </div>
            </div>
        </div>
        
        <div style="text-align: center;">
            <button onclick="refreshStats()">Refresh Stats</button>
            <button onclick="shareReview()">Share Your Review</button>
        </div>
    </div>

    <script>
        // JavaScript for dynamic content and interactions
        function generateMockData() {
            const totalTime = Math.floor(Math.random() * 1000) + 500; // Mock hours
            const topSites = ['google.com', 'youtube.com', 'github.com', 'stackoverflow.com', 'microsoft.com'];
            const productivity = Math.floor(Math.random() * 100) + 1; // Mock score out of 100
            
            return { totalTime, topSites, productivity };
        }
        
        function displayStats() {
            const data = generateMockData();
            
            // Update total time
            document.getElementById('total-time').textContent = `${data.totalTime} hours`;
            const timeProgress = document.getElementById('time-progress');
            timeProgress.style.width = `${(data.totalTime / 1500) * 100}%`; // Animate to percentage
            
            // Update top sites
            const sitesList = document.getElementById('top-sites');
            sitesList.innerHTML = '';
            data.topSites.forEach(site => {
                const li = document.createElement('li');
                li.textContent = site;
                sitesList.appendChild(li);
            });
            
            // Update productivity
            document.getElementById('productivity-score').textContent = `${data.productivity}/100`;
            const prodProgress = document.getElementById('productivity-progress');
            prodProgress.style.width = `${data.productivity}%`;
        }
        
        function refreshStats() {
            displayStats();
        }
        
        function shareReview() {
            alert('Sharing your Year in Review! (In a real app, this would open a share dialog.)');
        }
        
        // Initialize on page load
        window.onload = displayStats;
    </script>
</body>
</html>
